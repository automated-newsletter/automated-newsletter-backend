{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": ["es2021", "dom"],
        "rootDir": "./src",
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "sourceMap": true,
        "skipLibCheck": true
    },
    "typeRoots": ["./node_modules/@types", "./types"]
}
